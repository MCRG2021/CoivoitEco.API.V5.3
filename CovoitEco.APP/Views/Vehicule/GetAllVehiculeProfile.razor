@inherits CovoitEco.APP.Components.Vehicule.VehiculeComponent

@if (responseGetAllVehicule == null)
{
    <div class="container pt-5">
        <div class="spinner-border text-primary"></div>
        <p><em>Loading...</em></p>
    </div>
}
else
{
    <div class="container pt-3">
        <h2>Mes véhicules</h2>
        <table class="table">
            <thead class="table-dark">
                <tr>
                    <th scope="col">Immatriculation</th>
                    <th scope="col">Marque</th>
                    <th scope="col">Modèle</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var vehiculeProfile in responseGetAllVehicule.Lists)
                {
                    <tr>
                        <td>@vehiculeProfile.VEHPR_Immatriculation</td>
                        <td>@vehiculeProfile.VEHPR_Marque</td>
                        <td>@vehiculeProfile.VEHPR_Modele</td>
                        <td class="align-middle">
                            <a href="" class="btn btn-primary">Définir comme vehicule courrant</a> @*not implemented for the demonstration*@
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}