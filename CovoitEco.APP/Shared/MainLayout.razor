@inherits LayoutComponentBase
@using Blazored.Toast.Configuration @*toast*@

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div>
            <BlazoredToasts Position="ToastPosition.BottomRight"
                            Timeout="5">
                <CloseButtonContent>
                    <div>
                        <span>&times;</span>
                    </div>
                </CloseButtonContent>
            </BlazoredToasts>
        </div>

        <div class="top-row px-4">
            @* Authentication/Authorization*@
            <AccessControl/>
        </div>
        <article class="content px-4">
            @Body
        </article>
    </main>
</div>





